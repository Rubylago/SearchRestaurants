<a class="btn btn-primary" href="/restaurants/new" role="button">Create </a> 
<!-- search bar -->
<div class="container search-bar">
  <div class="row">
      <div class="search-bar-inner col">
        <form action="/search">
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." style="border-radius:30px;" 
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
    </div>
    <div class="col"></div>
    <div class="dropdown col d-grid gap-2">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Sort 
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="/sort/name_en">A->Z</a></li>
        <li><a class="dropdown-item" href="/sort/-name_en">Z->A</a></li>
        <li><a class="dropdown-item" href="/sort/category">類別</a></li>
        <li><a class="dropdown-item" href="/sort/location">地區</a></li>
      </ul>
    </div>
  </div>
</div>

<!-- restaurant list -->

<div class="container mt-5">
  
  <div class="row row-cols-3" >
  {{#each Restaurant }}
    <div class="col" style="margin-bottom: 50px;">
      <div class="card-columns">
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>
      </div>
      
      <div style="display: flex; justify-content: flex-end;">
        <a href="/restaurants/{{ this._id }}/edit" style="padding: 5px;">Edit</a>
        <a href="/restaurants/{{ this._id }}" style="padding: 5px;">Detail</a>
        <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST">
          <button>Delete</button>
        </form>  
      </div>

    </div>
  {{/each}}
  </div>
</div>